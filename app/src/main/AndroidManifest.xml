<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pre.cg.camera">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.PictureDetail"
            android:theme="@style/AppTheme">

        </activity>

        <service
            android:name=".service.CameraAuto"
            android:enabled="true"
            android:exported="true" /> <!-- 使用TextureView需要开启硬件加速  android:hardwareAccelerated="true" -->
        <activity
            android:name=".activity.MainActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/fitsSystemWindowsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>